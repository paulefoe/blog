{{#*inline "head-block"}}
    <meta property="og:type" content="article">
    <meta property="og:url" content="https://www.paulefou.com/blog/{{post.slug}}">
{{/inline}}
{{#*inline "page"}}

<section id="article-body">
    <h2 class="article-title">
        {{post.title}}
    </h2>
    <time class="dt-published">
        {{formatDate post.created_at}}
    </time>
    <div class="content">
        {{formatArticle post.body }}
    </div>
</section>

{{/inline}}
{{~> (parent)~}}